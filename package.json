{
  "name": "browsernaut",
  "private": true,
  "version": "0.0.1-dev.5",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:debug": "CI=true yarn tauri build --debug --target x86_64-apple-darwin",
    "build:release": "dotenv tauri build --target x86_64-apple-darwin",
    "preview": "vite preview",
    "tauri": "tauri",
    "release": "release-it"
  },
  "dependencies": {
    "@hello-pangea/dnd": "^16.2.0",
    "@tauri-apps/api": "^1.3.0",
    "@types/styled-components": "^5.1.26",
    "autoprefixer": "^10.4.14",
    "clsx": "^1.2.1",
    "postcss": "^8.4.21",
    "react": "^18.2.0",
    "react-confetti-explosion": "^2.1.2",
    "react-dom": "^18.2.0",
    "styled-components": "^5.3.9",
    "tailwindcss": "^3.3.1",
    "tauri-plugin-store-api": "https://github.com/tauri-apps/tauri-plugin-store",
    "zustand": "^4.3.7"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^1.3.0",
    "@types/node": "^18.7.10",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "@vitejs/plugin-react": "^3.0.0",
    "auto-changelog": "^2.4.0",
    "dotenv": "^16.0.3",
    "dotenv-cli": "^7.2.1",
    "eslint": "^8.38.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "release-it": "^15.10.3",
    "typescript": "^5.0.4",
    "vite": "^4.0.0"
  },
  "release-it": {
    "hooks": {
      "after:bump": "yarn auto-changelog -p"
    },
    "git": {
      "commitMessage": "chore: release v${version}",
      "changelog": "yarn auto-changelog -p && git add CHANGELOG.md"
    }
  },
  "packageManager": "yarn@3.5.0"
}
