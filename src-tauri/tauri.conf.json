{
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "browsernaut",
    "version": "0.0.0"
  },
  "tauri": {
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false
    },
    "allowlist": {
      "window": {
        "all": true,
        "startDragging": true
      },
      "fs": {
        "all": true,
        "readFile": true,
        "writeFile": true,
        "readDir": true,
        "copyFile": true,
        "createDir": true,
        "removeDir": true,
        "removeFile": true,
        "renameFile": true,
        "exists": true,
        "scope": ["*"]
      },
      "shell": {
        "all": true,
        "open": true,
        "scope": [
          { "name": "echo", "cmd": "echo", "args": true },
          { "name": "openApp", "cmd": "open", "args": true },
          {
            "name": "defaultBrowser",
            "cmd": "defaults",
            "args": [
              "read",
              "~/Library/Preferences/com.apple.LaunchServices/com.apple.launchservices.secure"
            ]
          },
          {
            "name": "findApps",
            "cmd": "find",
            "args": [
              "/Applications",
              "-iname",
              "*.app",
              "-prune",
              "-not",
              "-path",
              "\"*/.*\""
            ]
          }
        ]
      },
      "notification": {
        "all": true
      },
      "clipboard": {
        "all": true
      }
    },
    "bundle": {
      "macOS": {
        "entitlements": "./entitlements.mac.plist",
        "minimumSystemVersion": "10.15"
      },
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.billyjacoby.browsernaut",
      "targets": "all"
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "menu_bar",
        "fullscreen": false,
        "height": 400,
        "resizable": false,
        "title": "menubar",
        "width": 500,
        "visible": false,
        "hiddenTitle": true,
        "decorations": false,
        "focus": false,
        "transparent": true,
        "skipTaskbar": true,
        "alwaysOnTop": true
      }
    ]
  }
}
