{
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Browsernaut",
    "version": "../package.json"
  },
  "tauri": {
    "systemTray": {
      "iconPath": "icons/tray-icon.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false
    },
    "allowlist": {
      "window": {
        "all": true,
        "startDragging": true
      },
      "shell": {
        "scope": [
          { "name": "openApp", "cmd": "open", "args": true },
          {
            "name": "defaultBrowser",
            "cmd": "defaults",
            "args": [
              "read",
              "~/Library/Preferences/com.apple.LaunchServices/com.apple.launchservices.secure"
            ]
          },
          {
            "name": "findApps",
            "cmd": "find",
            "args": [
              "/Applications",
              "-iname",
              "*.app",
              "-prune",
              "-not",
              "-path",
              "\"*/.*\""
            ]
          }
        ]
      },
      "notification": {
        "all": true
      },
      "clipboard": {
        "all": true
      }
    },
    "bundle": {
      "macOS": {
        "entitlements": "./entitlements.mac.plist",
        "minimumSystemVersion": "10.15"
      },
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.billyjacoby.browsernaut",
      "targets": "all"
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "dialog": true,
      "endpoints": [
        "https://raw.githubusercontent.com/billyjacoby/browsernaut/main/updates.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDg1ODJGMzM3MDNERUNFRDAKUldUUXp0NEROL09DaGVLdUo1WHErVzkyeEV6K0NzQTUzd1pYMGwxOVl2OXIxT1JIQlo2ZWdkUjAK"
    },
    "windows": [
      {
        "label": "menu_bar",
        "height": 1,
        "width": 1,
        "fullscreen": false,
        "resizable": false,
        "title": "menubar",
        "visible": false,
        "hiddenTitle": true,
        "decorations": false,
        "focus": false,
        "skipTaskbar": true,
        "alwaysOnTop": true
      }
    ]
  }
}
